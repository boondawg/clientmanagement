<% content_for :page_css do -%>
    <%= stylesheet_link_tag 'fullcalendar', media: "all",
                            "data-turbolinks-track" => true %>
<% end -%>
<% content_for :page_js do -%>
    <%= javascript_include_tag 'fullcalendar.min' , "data-turbolinks-track" => true %>
    <%= javascript_include_tag 'custom/calendar',"data-turbolinks-track" => true %>
<% end -%>
<% content_for :custom_init do -%>
   Calendar.init();
<% end -%>
<div class="portlet box blue calendar">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-reorder"></i>Calendar
    </div>
  </div>
  <div class="portlet-body light-grey">
    <div class="row">
      <div class="col-md-3 col-sm-12">
        <!-- BEGIN DRAGGABLE EVENTS PORTLET-->
        <h3 class="event-form-title">Draggable Events</h3>
        <div id="external-events">
          <form class="inline-form">
            <input type="text" value="" class="form-control" placeholder="Event Title..." id="event_title"/><br/>
            <a href="javascript:;" id="event_add" class="btn green">
              Add Event
            </a>
          </form>
          <hr/>
          <div id="event_box">
          </div>
          <label for="drop-remove">
            <input type="checkbox" id="drop-remove"/>remove after drop </label>
          <hr class="visible-xs"/>
        </div>
        <!-- END DRAGGABLE EVENTS PORTLET-->
      </div>
      <div class="col-md-9 col-sm-12">
        <div id="calendar" class="has-toolbar">
        </div>
      </div>
    </div>
    <!-- END CALENDAR PORTLET-->
  </div>
</div>